{
    "name": "bandiya",
    "version": "1.0.0",
    "description": "CLI for interacting with Telegram platform.",
    "source": "src/index.ts",
    "main": "dist/main.js",
    "type": "module",
    "scripts": {
        "start": "bun run src/index.ts",
        "build": "NODE_ENV=production bun build src/index.ts --outdir dist --target node --packages=external",
        "compile": "NODE_ENV=production bun build src/index.ts --target node --compile --outfile dist/bandiya"
    },
    "files": [
        "dist/index.js",
        "dist/main.js"
    ],
    "keywords": [
        "nodejs",
        "rename",
        "renaming"
    ],
    "author": "Ragaeeb Haq",
    "license": "MIT",
    "dependencies": {
        "@inquirer/prompts": "^7.3.3",
        "cli-welcome": "^3.0.1",
        "conf": "^13.1.0",
        "pino": "^9.6.0",
        "pino-pretty": "^13.0.0",
        "telegram": "^2.26.22"
    },
    "engines": {
        "bun": ">=1.0.40"
    },
    "devDependencies": {
        "@eslint/js": "^9.22.0",
        "@types/node": "^22.13.10",
        "eslint": "^9.22.0",
        "eslint-config-prettier": "^10.1.1",
        "eslint-plugin-perfectionist": "^4.10.1",
        "eslint-plugin-prettier": "^5.2.3",
        "globals": "^16.0.0",
        "prettier": "^3.5.3",
        "semantic-release": "^24.2.3",
        "typescript-eslint": "^8.26.1"
    }
}
